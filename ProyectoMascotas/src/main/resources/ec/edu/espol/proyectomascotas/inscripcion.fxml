<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.controller.InscripcionController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="466.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label prefHeight="60.0" prefWidth="545.0" text="Registrar Inscripción" textFill="#6f00ff">
               <font>
                  <Font name="Algerian" size="48.0" />
               </font>
            </Label>
            <Label prefHeight="17.0" prefWidth="421.0" text="Para poder registrar una inscripción de debe registrar primero una mascota.">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" prefHeight="121.0" prefWidth="600.0">
               <children>
                  <Label text="Mascota:">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbMascotas" editable="true" prefHeight="25.0" prefWidth="189.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
               </children>
               <padding>
                  <Insets bottom="-30.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" prefHeight="78.0" prefWidth="600.0">
               <children>
                  <Label text="Concurso:">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbConcursos" editable="true" prefHeight="25.0" prefWidth="189.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
               </children>
               <padding>
                  <Insets top="-30.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#retroceder" prefHeight="29.0" prefWidth="79.0" style="-fx-background-color: rgb(23,23,23);" text="Menú" textFill="WHITE" underline="true">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#guardarInscripcion" prefHeight="29.0" prefWidth="79.0" style="-fx-background-color: rgb(23,23,23);" text="Registrar" textFill="WHITE" underline="true">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>